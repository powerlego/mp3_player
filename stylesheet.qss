/* -------------------------------------------------------------------------- */
/*                                Global Theme                                */
/* -------------------------------------------------------------------------- */

[darkMode="true"] *{
  background-color: #333333;
  color: #ffffff;
}

[darkMode="false"] *{
    background-color: #ffffff;
    color: #000000;
}

/* --------------------------------------------------------------------------
/*                                  Menu Bar                                  */
/* -------------------------------------------------------------------------- */
QMenuBar {
    spacing: 3px;
}

QMenuBar[darkMode="true"] {
    background-color: #424242;
}

QMenuBar[darkMode="false"] {
    background-color: #e0e0e0;
}
